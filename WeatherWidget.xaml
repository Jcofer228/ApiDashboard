<UserControl x:Class="ApiDashboard.Widgets.WeatherWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="250" Height="180">
    <Border Style="{StaticResource HoverableBorder}"
            Background="White"
            CornerRadius="16"
            Padding="16"
            Margin="12"
            BorderBrush="#dbeafe"
            BorderThickness="1"
            Effect="{StaticResource DropShadowEffect}"
            Cursor="Hand"
            MouseLeftButtonDown="Card_Click">
        <StackPanel>
            <TextBlock Text="🌦️ Weather"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="#2563eb"
                       Margin="0,0,0,8"/>
            <TextBlock x:Name="LocationText"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#1e3a8a"/>
            <TextBlock x:Name="TempText"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#1e3a8a"/>
            <TextBlock x:Name="ConditionText"
                       FontSize="12"
                       FontStyle="Italic"
                       Foreground="#64748b"/>
        </StackPanel>
    </Border>
</UserControl>

